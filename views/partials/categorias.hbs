<h2>Categorias</h2>
<a type="button" class="btn btn-primary mb-3" href="/categories/add">Agregar</a>
<table class="table table-striped table-inverse table-responsive">
    <thead class="thead-inverse">
        <tr>
            <th>Id</th>
            <th>Nombre</th>
            <th>Estado</th>
            <th>Usuario</th>
        </tr>
        </thead>
        <tbody>
            {{#each categorias}}
            <tr>
                <td scope="row">{{_id}}</td>
                <td>{{nombre}}</td>
                <td>{{estado}}</td>
                <td>{{usuario.nombre}}</td>
                <td><a type="button" class="btn btn-primary ml-3" href="/categories/edit/{{_id}}">Editar</a></td>
                <td><a type="button" class="btn btn-danger" href="/categories/delete/{{_id}}">Eliminar</a></td>
            </tr>
            {{/each}}
        </tbody>
</table>