<h2>Productos</h2>
<a type="button" class="btn btn-primary mb-3" href="/products/add">Agregar</a>
<table class="table table-striped table-inverse table-responsive">
    <thead class="thead-inverse">
        <tr>
            <th>Id</th>
            <th>Nombre</th>
            <th>Estado</th>
            <th>Usuario</th>
            <th>Precio</th>
            <th>Categoria</th>
            <th>Descripcion</th>
            <th>Disponible</th>
            <th>Imagen</th>
        </tr>
        </thead>
        <tbody>
            {{#each product}}
            <tr>
                <td scope="row">{{_id}}</td>
                <td>{{nombre}}</td>
                <td>{{estado}}</td>
                <td>{{usuario.nombre}}</td>
                <td>{{precio}}</td>
                <td>{{categoria.nombre}}</td>
                <td>{{descripcion}}</td>
                <td>{{disponible}}</td>
                <td>{{img}}</td>
                <td><a type="button" class="btn btn-primary ml-3" href="/products/edit/{{_id}}">Editar</a></td>
                <td><a type="button" class="btn btn-danger" href="/products/delete/{{_id}}">Eliminar</a></td>
            </tr>
            {{/each}}
        </tbody>
</table>