<h2>Rols</h2>
<a type="button" class="btn btn-primary mb-3" href="/rols/add">Agregar</a>
<table class="table table-striped table-inverse table-responsive">
    <thead class="thead-inverse">
        <tr>
            <th>Id</th>
            <th>Rol</th>
        </tr>
        </thead>
        <tbody>
            {{#each rol}}
            <tr>
                <td scope="row">{{_id}}</td>
                <td>{{rol}}</td>
                <td><a type="button" class="btn btn-primary ml-3" href="/rols/edit/{{_id}}">Editar</a></td>
                <td><a type="button" class="btn btn-danger" href="/rols/delete/{{_id}}">Eliminar</a></td>
            </tr>
            {{/each}}
        </tbody>
</table>